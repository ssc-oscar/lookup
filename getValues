#!/bin/bash

h=$(hostname)
ver=T
pVer=S
flat=n
pass=""
while getopts "fv:" option
do 
 case $option in
 f) flat=y; pass="$pass -f" ;;
 v) ver=$OPTARG; pass="$pass -v$ver";; esac
done
shift $((OPTIND-1))
t=$1



if [[ $t == "" ]]; then
 echo "Usage: getValues [OPTIONS] map";
 exit 1;
fi

if [[ $h == 'da5.eecs.utk.edu' ]] 
then 
  if [[ -f /fast/${t}Full$ver.31.tch || -f /fast/${t}Full$ver.tch ]]
  then ~/lookup/getValues.perl --flat=$flat /fast/${t}Full$ver
  else ~/lookup/getValues.perl --flat=$flat /fast/${t}Full$pVer
  fi
  exit
else
  if [[ -f /da5_fast/${t}Full$ver.31.tch || -f /da5_fast/${t}Full$ver.tch ]]
  then ~/lookup/getValues.perl --flat=$flat /da5_fast/${t}Full$ver
      exit
  fi
#  if [[ $ssh != "" ]] 
#  then $ssh "~/lookup/getValues.perl --flat=$flat $path"
#  else ~/lookup/getValues.perl --flat=$flat $path
#  fi
fi

#determine the fastest database
ssh=""
if [[ -f /fast/${t}Full$ver.31.tch || -f /fast/${t}Full$ver.tch ]]
then path=/fast/${t}Full$ver
else
  if [[ -f /data/basemaps/${t}Full$ver.31.tch || -f /data/basemaps/${t}Full$ver.tch ]]
  then path=/data/basemaps/${t}Full$ver
  else
    if [[ -f /data/basemaps/${t}Full$pVer.31.tch || -f /data/basemaps/${t}Full$pVer.tch ]]
    then ver=$pVer
      path=/data/basemaps/${t}Full$ver
    else
      path=$(ls -f /da?_data/basemaps/${t}Full$ver.31.tch 2> /dev/null | head -1)
      if [[ -f $path ]]
      then
        path=$(ls -f /da?_data/basemaps/${t}Full$ver.31.tch 2> /dev/null | head -1)
        path=${path%%.31.tch}
        ssh=${path%%_data*}
        ssh="ssh -p443 "${ssh##/}
        #echo "$path;$ssh"
      else
        path=$(ls -f /da?_data/basemaps/${t}Full$ver.tch 2> /dev/null | head -1)
        if [[ -f $path ]]
        then
          path=${path%%.tch}
          ssh=${path%%_data*}
          ssh="ssh -p443 "${ssh##/}
          #echo "$path;$ssh"
        else
          ver=$pVer
          path=$(ls -f /da?_data/basemaps/${t}Full$ver.31.tch 2> /dev/null | head -1)
          if [[ -f $path ]]
          then
            path=${path%%.31.tch}
            ssh=${path%%_data*}
            ssh="ssh -p443 "${ssh##/}
          else
            path=$(ls -f /da?_data/basemaps/${t}Full$ver.tch 2> /dev/null | head -1)
            path=${path%%.tch}
            ssh=${path%%_data*}
            ssh="ssh -p443 "${ssh##/}
          fi
        fi
      fi
    fi
  fi
fi
if [[ $ssh != "" ]]
then 
  $ssh "~/lookup/getValues.perl --flat=$flat $path"
else ~/lookup/getValues.perl --flat=$flat $path
fi


